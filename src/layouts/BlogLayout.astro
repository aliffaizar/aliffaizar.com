---
import Main from './Main.astro';
import Tags from '../components/Tags.astro';
const { title, description, pubDate, image, tags } =
  Astro.props.frontmatter || Astro.props;
---

<Main title={title} description={description}>
  <div class='space-y-3 lg:space-y-5 w-full'>
    <h1 class='text-3xl lg:text-5xl font-bold text-gray-200'>{title}</h1>
    <span>
      {
        pubDate && (
          <time class='text-sm lg:text-base'>
            {new Date(pubDate).toLocaleDateString('id-id', {
              day: 'numeric',
              month: 'short',
              year: 'numeric',
            })}
          </time>
        )
      }
      {tags && <Tags tags={tags} />}
    </span>
    {image && <img width={720} height={360} src={image} alt='' />}
    <div id='blogpost'>
      <slot />
    </div>
  </div>
</Main>
